{
  "name": "wysimark-monorepo",
  "private": true,
  "packageManager": "pnpm@8.6.6",
  "devDependencies": {
    "@thesunny/script-utils": "^0.2.2",
    "@types/node": "^18.11.18",
    "concurrently": "^7.2",
    "eslint": "^8.4.1",
    "eslint-config-custom": "*",
    "husky": "^8.0.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "tsconfig-paths": "^4.1.2",
    "turbo": "^1.10.13",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.1"
  },
  "scripts": {
    "-- build": "# build",
    "build": "concurrently 'pnpm build:readme' 'pnpm build:code'",
    "build:code": "turbo build",
    "build:readme": "ts-node scripts/build-readme/index.ts",
    "-- changesets": "# changesets",
    "changeset": "changeset",
    "-- husky": "# husky git lifecycle hooks",
    "husky:pre-commit": "pnpm lint && pnpm test",
    "-- lifecycle": "# lifecycle",
    "postinstall": "husky install",
    "open": "pnpm --filter react-demo open",
    "dev": "pnpm --filter react-demo start:local",
    "fix": "turbo fix",
    "lint": "pnpm turbo lint",
    "lint:eslint": "pnpm turbo lint:eslint",
    "lint:prettier": "pnpm turbo lint:prettier",
    "lint:tsc": "pnpm turbo lint:tsc",
    "-- preset": "# Run preset from ~/presets",
    "preset": "ts-node --project $HOME/presets/tsconfig.ts-node.json $HOME/presets/bin/index.ts",
    "-- ready": "# ready",
    "ready": "pnpm turbo ready",
    "-- release": "# release",
    "release": "is-git-clean && turbo run lint test:once && changeset version && changeset publish",
    "-- storybook": "# Run storybook app",
    "storybook": "pnpm workspace wysimark-storybook storybook",
    "-- test": "# test",
    "test": "pnpm turbo test:once",
    "test:watch": "pnpm --filter @wysimark/react run test:watch",
    "-- end": "# end"
  }
}
